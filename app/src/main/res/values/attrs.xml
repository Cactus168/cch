<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HomeGridLayout">
        <attr name="numColumns" format="integer" />
        <attr name="itemMargin" format="integer" />
    </declare-styleable>

    <declare-styleable name="StepBarView">
        <attr name="step_tv_color" format="color"/>
        <attr name="step_tv_size" format="dimension"/>
        <attr name="step_padding" format="dimension"/>
        <attr name="step_circle_color_checked" format="color"/>
        <attr name="step_circle_color_unchecked" format="color"/>
        <attr name="step_line_color" format="color"/>
        <attr name="step_number_color_checked" format="color"/>
        <attr name="step_number_color_unchecked" format="color"/>
        <attr name="step_edge_line_width" format="dimension"/>
        <attr name="step_center_line_width" format="dimension"/>
        <attr name="step_circle_radius" format="dimension"/>
        <attr name="step_top_name" format="reference"/>
        <attr name="step_bottom_name" format="reference"/>
        <attr name="step_check_number" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="tv_color_checked" format="color"/>
        <attr name="tv_color_unchecked" format="color"/>
        <attr name="bg_color_checked" format="color"/>
        <attr name="bg_color_unchecked" format="color"/>
        <attr name="step_names" format="reference"/>
        <attr name="step_view_padding" format="dimension"/>
        <attr name="step_width" format="dimension"/>
        <attr name="step_height" format="dimension"/>
        <attr name="check_num" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ScoreView">
        <!--GroupView的属性-->
        <attr name="score_horizontal_space" format="dimension" />
        <attr name="score_text" format="string" />

        <!--ItemView的属性-->
        <attr name="item_horizontal_padding" format="dimension" />
        <attr name="item_vertical_padding" format="dimension" />
        <attr name="item_background_color" format="color" />
        <attr name="item_background" format="reference" />

        <attr name="item_border_width" format="dimension" />
        <attr name="item_border_color" format="color" />
        <attr name="item_corner_radius" format="dimension" />

        <attr name="item_text_size" format="dimension" />
        <attr name="item_text_color" format="color" />
        <attr name="item_text_style" format="color" />

    </declare-styleable>

    <declare-styleable name="TagGroup">
        <!-- Whether the tag group is in append mode. -->
        <attr name="atg_isAppendMode" format="boolean" />
        <!-- If the tag group is in append mode, what the hint of input tag. -->
        <attr name="atg_inputHint" format="string" />

        <!-- The tag view outline border color. -->
        <attr name="atg_borderColor" format="color" />
        <!-- The tag view text color. -->
        <attr name="atg_textColor" format="color" />
        <!-- The tag view background color. -->
        <attr name="atg_backgroundColor" format="color" />

        <!-- The dash outline border color, when in append mode. -->
        <attr name="atg_dashBorderColor" format="color" />
        <!-- The input tag hint text color, when in append mode. -->
        <attr name="atg_inputHintColor" format="color" />
        <!-- The input tag type text color, when in append mode. -->
        <attr name="atg_inputTextColor" format="color" />

        <!-- The checked tag view outline border color. -->
        <attr name="atg_checkedBorderColor" format="color" />
        <!-- The checked text color. -->
        <attr name="atg_checkedTextColor" format="color" />
        <!-- The checked marker color. -->
        <attr name="atg_checkedMarkerColor" format="color" />
        <!-- The checked tag view background color. -->
        <attr name="atg_checkedBackgroundColor" format="color" />

        <!-- The tag view background color, when the tag view is being pressed. -->
        <attr name="atg_pressedBackgroundColor" format="color" />

        <!-- The tag view outline border stroke width. -->
        <attr name="atg_borderStrokeWidth" format="dimension" />
        <!-- The tag view text size. -->
        <attr name="atg_textSize" format="dimension" />

        <attr name="atg_horizontalSpacing" format="dimension" />
        <attr name="atg_verticalSpacing" format="dimension" />
        <attr name="atg_horizontalPadding" format="dimension" />
        <attr name="atg_verticalPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="tagGroupStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="WaveLineView">
        <attr name="wlvBackgroundColor" format="color"/>
        <attr name="wlvLineColor" format="color"/>
        <attr name="wlvThickLineWidth" format="dimension"/>
        <attr name="wlvFineLineWidth" format="dimension"/>
        <attr name="wlvMoveSpeed" format="float"/>
        <attr name="wlvSamplingSize" format="integer"/>
        <attr name="wlvSensibility" format="integer"/>
    </declare-styleable>
</resources>