<?xml version = "1.0" encoding = "utf-8" ?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:orientation = "vertical"
    android:paddingLeft = "1dip"
    android:paddingRight = "1dip"
    android:paddingTop = "1dip"
    android:paddingBottom = "2dip">
    <Button
        android:id = "@+id/btn_my_favorites"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:gravity = "center"
        android:text = "快速选择"
        android:textSize = "15sp" android:background="#0079fe"
        android:textColor = "@android:color/white" android:textStyle = "bold"   />

    <View
        android:layout_width = "fill_parent"
        android:layout_height = "0.5dip"
        android:background = "#eee"   />

    <Button
        android:id = "@+id/btn_my_correction"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:gravity = "center"
        android:text = "自由选择" android:background="#0079fe"
        android:textColor = "@android:color/white"
        android:textSize = "15sp"
        android:textStyle = "bold"/>
</LinearLayout >