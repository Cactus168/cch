            android:layout_height="wrap_content">
            <com.jo.cch.view.StepView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:check_num="2"
                app:step_names="@array/bottomNames"/>
        </LinearLayout>
