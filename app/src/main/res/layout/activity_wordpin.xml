                    android:id="@+id/wordPy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:background="@color/fieldWordBG"
                    android:textSize="170dp"
                    android:text="buang"
                    android:textColor="@color/orange"/>
